{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Created postgres RDS instance",
    "Mappings": {
        "envMap": {
            "prod": {
                "charId": "p",
                "dbSubnetGroup": "prod-dbsubnetgroup-us-east-1-stack-dbsg",
                "vpcId": "vpc-927ea1f6"
            }
        }
    },
    "Outputs": {
        "Endpoint": {
            "Description": "Endpoint of the RDS instance",
            "Value": {
                "Fn::GetAtt": [
                    "rdsInstance",
                    "Endpoint.Address"
                ]
            }
        },
        "Port": {
            "Description": "Port being used by the RDS instance",
            "Value": {
                "Fn::GetAtt": [
                    "rdsInstance",
                    "Endpoint.Port"
                ]
            }
        },
        "SecurityGroupId": {
            "Description": "Security group of the RDS instance",
            "Value": {
                "Fn::GetAtt": [
                    "dbAccessGroup",
                    "GroupId"
                ]
            }
        }
    },
    "Parameters": {
        "Application": {
            "AllowedPattern": "[a-zA-Z0-9_@./#&+-]*",
            "Description": "Stellar Application (ex: Invoices, Billing etc.)",
            "MaxLength": "20",
            "MinLength": "1",
            "Type": "String"
        },
        "Environment": {
            "AllowedValues": [
                "prod"
            ],
            "Default": "prod",
            "Description": "Environment for RDS",
            "Type": "String"
        },
        "allocatedStorage": {
            "Description": "Storage needed in GB",
            "Type": "Number"
        },
        "applicationShortName": {
            "AllowedPattern": "[a-zA-Z0-9_@./#&+-]*",
            "Description": "Short version of Application limited to 7 characters",
            "MaxLength": "7",
            "MinLength": "1",
            "Type": "String"
        },
        "counter": {
            "Description": "Goal is to launch multiple database copies, this is a numeric identifier",
            "Type": "Number"
        },
        "instanceClass": {
            "AllowedValues": [
                "db.m3.medium",
                "db.m3.large",
                "db.m3.xlarge",
                "db.m3.2xlarge",
                "db.r3.large",
                "db.r3.xlarge",
                "db.r3.2xlarge"
            ],
            "Default": "db.m3.medium",
            "Description": "Instance Class determined CPU, memory, and network performance",
            "Type": "String"
        },
        "masterPass": {
            "Description": "Password for dbmaster user",
            "NoEcho": true,
            "Type": "String"
        },
        "storageEncrypted": {
            "Description": "Indicates whether the database instance is encrypted.",
            "Type": "String"
        }
    },
    "Resources": {
        "dbAccessGroup": {
            "Properties": {
                "GroupDescription": {
                    "Fn::Join": [
                        " ",
                        [
                            {
                                "Ref": "Environment"
                            },
                            {
                                "Ref": "Application"
                            },
                            {
                                "Ref": "counter"
                            },
                            "mysql",
                            "access",
                            "group"
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "-",
                                [
                                    {
                                        "Ref": "Environment"
                                    },
                                    {
                                        "Ref": "Application"
                                    },
                                    {
                                        "Ref": "counter"
                                    },
                                    "mysql",
                                    "access",
                                    "group"
                                ]
                            ]
                        }
                    }
                ],
                "VpcId": {
                    "Fn::FindInMap": [
                        "envMap",
                        {
                            "Ref": "Environment"
                        },
                        "vpcId"
                    ]
                }
            },
            "Type": "AWS::EC2::SecurityGroup"
        },
        "dbSecurityGroup": {
            "Properties": {
                "GroupDescription": {
                    "Fn::Join": [
                        " ",
                        [
                            {
                                "Ref": "Environment"
                            },
                            {
                                "Ref": "Application"
                            },
                            {
                                "Ref": "counter"
                            },
                            "mysql",
                            "security",
                            "group"
                        ]
                    ]
                },
                "SecurityGroupIngress": [
                    {
                        "FromPort": 3306,
                        "IpProtocol": "tcp",
                        "SourceSecurityGroupId": {
                            "Fn::GetAtt": [
                                "dbAccessGroup",
                                "GroupId"
                            ]
                        },
                        "ToPort": 3306
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "-",
                                [
                                    {
                                        "Ref": "Environment"
                                    },
                                    {
                                        "Ref": "Application"
                                    },
                                    {
                                        "Ref": "counter"
                                    },
                                    "mysql",
                                    "security",
                                    "group"
                                ]
                            ]
                        }
                    }
                ],
                "VpcId": {
                    "Fn::FindInMap": [
                        "envMap",
                        {
                            "Ref": "Environment"
                        },
                        "vpcId"
                    ]
                }
            },
            "Type": "AWS::EC2::SecurityGroup"
        },
        "dnsEntry": {
            "Properties": {
                "HostedZoneName": {
                    "Fn::Join": [
                        "",
                        [
                            "stellarkeysandremotes",
                            {
                                "Ref": "Environment"
                            },
                            ".com."
                        ]
                    ]
                },
                "Name": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "applicationShortName"
                            },
                            ".db.stellarkeysandremotes",
                            {
                                "Ref": "Environment"
                            },
                            ".com."
                        ]
                    ]
                },
                "ResourceRecords": [
                    {
                        "Fn::GetAtt": [
                            "rdsInstance",
                            "Endpoint.Address"
                        ]
                    }
                ],
                "TTL": "60",
                "Type": "CNAME"
            },
            "Type": "AWS::Route53::RecordSet"
        },
        "rdsInstance": {
            "Properties": {
                "AllocatedStorage": {
                    "Ref": "allocatedStorage"
                },
                "AllowMajorVersionUpgrade": "false",
                "AutoMinorVersionUpgrade": "true",
                "BackupRetentionPeriod": 16,
                "DBInstanceClass": {
                    "Ref": "instanceClass"
                },
                "DBInstanceIdentifier": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "Environment"
                            },
                            {
                                "Ref": "Application"
                            },
                            {
                                "Ref": "counter"
                            },
                            "mysqlrds"
                        ]
                    ]
                },
                "DBSubnetGroupName": {
                    "Fn::FindInMap": [
                        "envMap",
                        {
                            "Ref": "Environment"
                        },
                        "dbSubnetGroup"
                    ]
                },
                "Engine": "mysql",
                "EngineVersion": "5.6.23",
                "LicenseModel": "general-public-license",
                "MasterUserPassword": {
                    "Ref": "masterPass"
                },
                "MasterUsername": "simple_user",
                "MultiAZ": "true",
                "Port": 3306,
                "PubliclyAccessible": "false",
                "StorageEncrypted": {
                    "Ref": "storageEncrypted"
                },
                "StorageType": "gp2",
                "VPCSecurityGroups": [
                    {
                        "Ref": "dbSecurityGroup"
                    }
                ]
            },
            "Type": "AWS::RDS::DBInstance"
        }
    }
}
